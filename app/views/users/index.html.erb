<%= render "home/navbar" %>
<div class="container">


<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <h1>
      <%= user.name%>
    </h1>
    <ul>
      <li>
        Bio : <%= user.bio %>
      </li>
        Email : <%= user.email %>
      <li>
        Location: <%= user.location%>
      </li>
      <li>
        Area of Interest: <%= user.area_of_interest%>
      </li>
      <li>
        Past Employment: <%= user.past_employment%>
      </li>
      <li>
        years of expertise: <%= user.years_of_expertise%>
      </li>
      <li>
        Ethnicity: <%= user.ethnicity%>
      </li>
      <li>
        Orientation: <%= user.orientation%>
      </li>
    </ul>
      <ul>
        <button><%= link_to 'Show', user %></button>
        <% if current_user == user %>
        <button><%= link_to 'Edit', edit_user_path(user) %></button>
        <button><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <% end %>
      </ul>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

</div>
