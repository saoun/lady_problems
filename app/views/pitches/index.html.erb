<p id="notice"><%= notice %></p>

<h1>Pitches</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <hr>
    <% @pitches.each do |pitch| %>

    <div class = "pitch_index_wrapper">
    <h2 class = "pitch_index_title"><%=pitch.title%></h2>
    <p class = "pitch_index_show"><%=pitch.description%></p>
    <p class = "pitch_index_author">by <%=pitch.user.name%></p>
      <ul>
        <button><%= link_to 'Show', pitch %></button>
        <button><%= link_to 'Edit', edit_pitch_path(pitch) %></button>
        <button><%= link_to 'Destroy', pitch, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </ul>
    </div>
    <hr>
    <% end %>
  </tbody>
</table>

<br>
<div class="newPitch waves-effect waves-light btn-large">
<%= link_to 'New Pitch', new_pitch_path %>
</div>
